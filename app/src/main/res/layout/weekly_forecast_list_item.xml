<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    tools:ignore="ContentDescription">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/item_0"
        android:layout_width="@dimen/column_size"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/column_first_margin"
        android:layout_marginEnd="@dimen/column_margin"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toRightOf="@+id/icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/item_1"/>

    <TextView
        android:id="@+id/item_1"
        android:layout_width="@dimen/column_size"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/column_margin"
        android:layout_marginEnd="@dimen/column_margin"
        app:layout_constraintLeft_toRightOf="@+id/item_0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/item_2"/>

    <TextView
        android:id="@+id/item_2"
        android:layout_width="@dimen/column_size"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/column_margin"
        android:layout_marginEnd="@dimen/column_margin"
        app:layout_constraintLeft_toRightOf="@+id/item_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/item_3"/>

    <TextView
        android:id="@+id/item_3"
        android:layout_width="@dimen/column_size"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/column_margin"
        android:layout_marginEnd="@dimen/column_margin"
        app:layout_constraintLeft_toRightOf="@+id/item_2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/item_4"/>

    <TextView
        android:id="@+id/item_4"
        android:layout_width="@dimen/column_size"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/column_margin"
        android:layout_marginEnd="@dimen/column_margin"
        app:layout_constraintLeft_toRightOf="@+id/item_3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/item_5"/>

    <TextView
        android:id="@+id/item_5"
        android:layout_width="@dimen/column_size"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/column_margin"
        android:layout_marginEnd="@dimen/column_margin"
        app:layout_constraintLeft_toRightOf="@+id/item_4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/item_6"/>

    <TextView
        android:id="@+id/item_6"
        android:layout_width="@dimen/column_size"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/column_margin"
        android:layout_marginEnd="@dimen/column_margin"
        app:layout_constraintLeft_toRightOf="@+id/item_5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>