<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/screen_margin"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:ignore="ContentDescription">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/city"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="@string/city"
                android:textSize="@dimen/city_font_size"
                app:layout_constraintBottom_toTopOf="@+id/gl_top"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/current_temperature"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/current_temperature"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="@string/current_temperature"
                android:textSize="@dimen/current_temperature_font_size"
                app:layout_constraintBottom_toTopOf="@+id/gl_top"
                app:layout_constraintLeft_toRightOf="@+id/city"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.25"/>

            <TextView
                android:id="@+id/hourly_forecast"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/label_margin_top"
                android:text="@string/hourly_forecast"
                android:textSize="@dimen/label_font_size"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gl_top"/>

            <ImageView
                android:id="@+id/icon_clock"
                android:src="@drawable/clock"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_margin="@dimen/icons_margin"
                app:layout_constraintTop_toBottomOf="@+id/hourly_forecast"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <ImageView
                android:id="@+id/icon_temperature_per_hour"
                android:src="@drawable/temperature"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_margin="@dimen/icons_margin"
                app:layout_constraintTop_toBottomOf="@+id/icon_clock"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <ImageView
                android:id="@+id/icon_precipitation_per_hour"
                android:src="@drawable/precipitation"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_margin="@dimen/icons_margin"
                app:layout_constraintTop_toBottomOf="@+id/icon_temperature_per_hour"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <ImageView
                android:id="@+id/icon_speed_wind_per_hour"
                android:src="@drawable/wind"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_margin="@dimen/icons_margin"
                app:layout_constraintTop_toBottomOf="@+id/icon_precipitation_per_hour"
                app:layout_constraintLeft_toLeftOf="parent"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/icon_humidity_per_hour"
                android:src="@drawable/humidity"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_margin="@dimen/icons_margin"
                app:layout_constraintTop_toBottomOf="@+id/icon_speed_wind_per_hour"
                app:layout_constraintLeft_toLeftOf="parent"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/weekly_forecast"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/label_margin_top"
                android:text="@string/weekly_forecast"
                android:textSize="@dimen/label_font_size"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/icon_humidity_per_hour"/>

            <ImageView
                android:id="@+id/icon_calendar"
                android:src="@drawable/calendar"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_margin="@dimen/icons_margin"
                app:layout_constraintTop_toBottomOf="@+id/weekly_forecast"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <ImageView
                android:id="@+id/icon_temperature"
                android:src="@drawable/temperature"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_margin="@dimen/icons_margin"
                app:layout_constraintTop_toBottomOf="@+id/icon_calendar"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <ImageView
                android:id="@+id/icon_day"
                android:src="@drawable/day"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_margin="@dimen/icons_margin"
                app:layout_constraintTop_toBottomOf="@+id/icon_temperature"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <ImageView
                android:id="@+id/icon_night"
                android:src="@drawable/night"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_margin="@dimen/icons_margin"
                app:layout_constraintTop_toBottomOf="@+id/icon_day"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <ImageView
                android:id="@+id/icon_precipitation"
                android:src="@drawable/precipitation"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_margin="@dimen/icons_margin"
                app:layout_constraintTop_toBottomOf="@+id/icon_night"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <ImageView
                android:id="@+id/icon_speed_wind"
                android:src="@drawable/wind"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_margin="@dimen/icons_margin"
                app:layout_constraintTop_toBottomOf="@+id/icon_precipitation"
                app:layout_constraintLeft_toLeftOf="parent"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/icon_humidity"
                android:src="@drawable/humidity"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_margin="@dimen/icons_margin"
                app:layout_constraintTop_toBottomOf="@+id/icon_speed_wind"
                app:layout_constraintLeft_toLeftOf="parent"
                android:visibility="gone"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_add_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/bt_add_city_margin_end"
        android:layout_marginBottom="@dimen/bt_add_city_margin_bottom"
        android:text="@string/add_city"
        android:textSize="@dimen/symbol_font_size"
        android:layout_gravity="bottom|end"/>

</FrameLayout>
